<h1>Login</h1>

<section>
  <h2>Login</h2>
  <form class="login-form">
    <input id="username-login" type="text" placeholder="Username" required>
    <input id="password-login" type="password" placeholder="Password" required>
    <button type="submit">Login</button>
  </form>
</section>

<section>
  <h2>Sign Up</h2>
  <form class="signup-form" method="POST" action="/api/users/signup">
    <input id="username-signup" type="text" placeholder="Username" name="username" required>
    <input id="password-signup" type="password" placeholder="Password" name="password" required>
    <button type="submit">Sign Up</button>
   </form>
</section>
