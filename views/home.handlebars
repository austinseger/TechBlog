<h1>Welcome to the Tech Blog</h1>

{{#if posts.length}}
  <ul>
    {{#each posts}}
      <li>
        <h2>{{this.title}}</h2>
        <p>{{this.content}}</p>
        <p>Posted by: {{this.user.username}}</p>
        <p>Created at: {{this.createdAt}}</p>
      </li>
    {{/each}}
  </ul>
{{else}}
  <p>No blog posts yet. Be the first to <a href="/dashboard">create one!</a></p>
{{/if}}
