<h1>{{title}}</h1>
<p>Posted on {{createdAt}} by {{User.username}}</p>
<p>{{content}}</p>

<section>
  <h2>Comments</h2>

  {{#if comments.length}}
    <ul>
      {{#each comments}}
        <li class="comment">
          <p>{{content}}</p>
          <p>â€” {{User.username}}, {{createdAt}}</p>
        </li>
      {{/each}}
    </ul>
  {{else}}
    <p>No comments yet. Be the first to comment!</p>
  {{/if}}
</section>

{{#if loggedIn}}
<section>
  <h2>Leave a Comment</h2>
  <form class="comment-form">
    <textarea id="comment-content" placeholder="Your comment here" required></textarea>
    <button type="submit">Submit</button>
  </form>
</section>
{{else}}
<p>You need to <a href="/login">log in</a> to comment.</p>
{{/if}}
