<h1>Your Dashboard</h1>

<section>
  <h2>Create New Post</h2>
  <form class="new-post-form">
    <input id="post-title" type="text" placeholder="Post Title" required>
    <textarea id="post-content" placeholder="Post Content" required></textarea>
    <button type="submit">Create Post</button>
  </form>
</section>

<section>
  <h2>Your Blog Posts</h2>

  {{#if posts.length}}
  <ul>
    {{#each posts}}
      <li>
        <h2>{{this.title}}</h2>
        <p>{{this.content}}</p>
        <p>Posted by: {{this.user.username}}</p>
        <p>Created at: {{this.createdAt}}</p>
      </li>
    {{/each}}
  </ul>
{{else}}
  <p>You have no posts yet.</p>
{{/if}}
</section>
